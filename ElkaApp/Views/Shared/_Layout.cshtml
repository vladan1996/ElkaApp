<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ElkaApp - @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
   

   

    <link href="~/Content/toastr.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">
    <!-- FontAwesome CSS -->
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <style>

        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            border-radius: 10px;
            box-shadow: inset 0 0 5px rgba(0,0,0,0.1);
        }

        ::-webkit-scrollbar-thumb {
            background-color: rgba(62,162,158,0.2);
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background-color: rgba(62,162,158,0.6);
                cursor: pointer;
            }

        body {
            padding: 0px !important;
        }

        .page .sidebar {
            height: 100vh;
            width: 280px;
            background-color: #176ae7;
            top: 0;
            left: 0;
            position: fixed;
            transition: all 0.8s ease;
            overflow-x: hidden;
            overflow-y: auto;
            z-index: 100;
        }

        .page .content {
            margin-left: 282px;
            padding: 30px;
            transition: all 0.8s ease;
        }

        body.active .page .sidebar {
            left: -280px;
        }

        body.active .page .content {
            margin-left: 0;
            width: 100%;
            padding: 23px 61px 0 70px;
        }

        .logo-title {
            color: white;
            font-family: Roboto,sans-serif;
            font-weight: 600;
        }

        .logo-sidebar {
            margin-top: 20px;
            margin-bottom: 10px;
            width: 100%;
            height: auto;
        }

        .sidebar-logo-container {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        .logo-profile {
            width: 80px;
            margin-top: 20px;
        }

        .logo-container {
            max-width: 50px;
        }

        .navigation-list {
            list-style-type: none;
            padding: 0px 30px 0px 0px;
        }

        .navigation-list-item {
            padding: 15px 18px 15px 40px;
        }

            .navigation-list-item > a {
                color: white;
                text-decoration: none;
                font-family: Roboto,sans-serif;
                font-size: 12px;
            }

            .navigation-list-item:hover {
                background-color: #1454e0;
                cursor: pointer;
            }

            .navigation-list-item.active {
                background-color: #1454e0;
                cursor: pointer;
            }

        .title-admin {
            font-size: 14px;
            color: silver;
        }

        .sidebar-middle {
            margin-top: 20px;
            border-bottom: 1px solid silver;
            width: 70%;
            margin-left: 20px;
            display: flex;
            align-content: center;
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f4f5f9;
            box-shadow: 0 -5px 5px -5px #c5c6c7;
            padding: 5px;
            align-items: center;
            z-index: 10;
        }

        .footer-text {
            margin-top: 10px;
            margin-left: 290px;
            font-size: 13px;
            transition: all 0.8s ease;
        }

            .footer-text.active {
                margin-left: 10px;
                transition: all 0.8s ease;
            }

        .navigation-list-item > a > i {
            margin-right: 20px;
        }

        .navigation-bar {
            display: flex;
            align-items: center;
            background-color: #f4f5f9;
            box-shadow: 0 4px 2px -2px #c5c6c7;
            height: 60px;
            position: sticky;
            top: 0;
        }

        .sidebarToggle {
            position: fixed;
            font-size: 16px;
            background-color: #c5c6c7;
            margin-left: 260px;
            z-index: 999;
            border-radius: 10px;
            outline: none !important;
            box-shadow: none !important;
            transition: all 0.8s ease;
            margin-top: 10px;
        }

            .sidebarToggle:hover {
                color: white;
            }

            .sidebarToggle.active {
                margin-left: 10px;
            }

        .logout-btn {
            text-decoration: none;
            color: white;
            font-size: 12px;
            font-family: Roboto, sans-serif;
            margin-left: 13px;
        }

            .logout-btn:hover {
                color: white;
            }
    </style>
</head>
<body>

    <div class="page">
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo-container">
                    <div class="logo-container">
                        <img class="logo-sidebar" src="~/Content/img/logic.png" />
                    </div>

                    <h3 class="logo-title">WELCOME TO ELKA</h3>
                </div>
            </div>

            <div class="sidebar-logo-container">
                <img class="logo-profile" src="~/Content/img/Profile.png" />
            </div>

            <div class="sidebar-middle">
                <p class="title-admin">Admin Menu</p>
            </div>

            <div class="sidebar-body">
                <ul class="navigation-list">
                    <li class="navigation-list-item">
                        <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Job" }, Request.Url.Scheme)">
                            <i class="fa-solid fa-briefcase"></i>
                            Job
                        </a>
                    </li>
                    <li class="navigation-list-item">
                        <a href="#">
                            <i class="fa-solid fa-chart-line"></i>
                            Job Status
                        </a>
                    </li>
                    <li class="navigation-list-item">
                        <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Company" }, Request.Url.Scheme)">
                            @* dodao za prelazak na company view *@
                            <i class="fa-solid fa-building"></i>
                            Company Info
                        </a>
                    </li>
                    <li class="navigation-list-item">
                        <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "User" }, Request.Url.Scheme)">
                            <i class="fa-solid fa-user"></i>
                            User
                        </a>
                    </li>
                    <li class="navigation-list-item">

                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-navigation-bar" }))
                            {
                                @Html.AntiForgeryToken()
                                <i style="color:white" class="fa-solid fa-right-from-bracket"></i>
                                <a class="logout-btn" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a>
                            }
                        }
                        else
                        {
                            <script>
                                toastr.info('You must log into the application!');
                            </script>

                        }
                    </li>
                </ul>
            </div>
        </div>
        <div class="navigation-bar-btn">
            <button id="sidebarToggle" class="btn sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        <div class="navigation-bar">

        </div>

        <div class="content">
            @RenderBody()
        </div>

        <footer>
            <p class="footer-text">&copy; @DateTime.Now.Year - ELKA Co. All Rights Reserved </p>
        </footer>





    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script>


        let sidebarHeader = document.querySelector('.sidebar-header');
        let sidebarToggle = document.querySelector(".sidebarToggle");


        sidebarToggle.addEventListener('click', function () {
            document.querySelector("body").classList.toggle('active');
            document.getElementById("sidebarToggle").classList.toggle('active');
            document.querySelector('.footer-text').classList.toggle('active');

        });
        sidebarHeader.addEventListener('click', function () {
            document.querySelector("body").classList.toggle('active');
            document.getElementById("sidebarToggle").classList.toggle('active');
            document.querySelector('.footer-text').classList.toggle('active');
        })

        const items = document.querySelectorAll('.navigation-list-item');

        $(document).ready(function () {
            activeClass();
        })

        function activeClass() {
            var path = window.location.pathname;

            path = path.replace(/\/$/, "");
            path = decodeURIComponent(path);
            console.log(path)

            $(".navigation-list a").each(function () {
                var href = $(this).attr('href');
                href = href.slice(href.lastIndexOf("/"));
                console.log("Ovo je hreg: " + href)
                console.log("Ovo je path.substring:" + path.substring(0, href.length))
                if (path.substring(0, href.length) === href) {
                    $(this).closest('li').addClass('active');
                }
            });
        }

    </script>


    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    <!--Toaster notification -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    @*@RenderSection("scripts", required: false)
        @RenderSection("scripts", required: false)*@

</body>
</html>